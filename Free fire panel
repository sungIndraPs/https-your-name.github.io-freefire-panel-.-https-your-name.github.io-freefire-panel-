  <script>
    function applyConfig() {
      const log = [];

      const aimlock = document.getElementById('aimlock').checked;
      const drag = document.getElementById('dragHead').checked;
      const antiBan = document.getElementById('antiBan').checked;
      const magicBullet = document.getElementById('magicBullet').checked;
      const noRecoil = document.getElementById('noRecoil').checked;
      const sensitivity = document.getElementById('sensitivity').value;
      const crosshair = document.getElementById('crosshair').value;

      log.push(">> Script Applied Successfully");
      log.push("â€¢ Aimlock: " + (aimlock ? "ENABLED" : "OFF"));
      log.push("â€¢ Auto Drag Headshot: " + (drag ? "ENABLED" : "OFF"));
      log.push("â€¢ Anti-Ban: " + (antiBan ? "ON" : "OFF"));
      log.push("â€¢ Magic Bullet: " + (magicBullet ? "ACTIVE" : "OFF"));
      log.push("â€¢ No Recoil: " + (noRecoil ? "YES" : "NO"));
      log.push("â€¢ Sensitivity: " + sensitivity + "%");
      log.push("â€¢ Crosshair Color: " + crosshair.toUpperCase());

      document.getElementById('logBox').innerText = log.join("\n");
    }
  </script>

